{
  "compilerOptions": {
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react", // Cambia a "react-jsx" para compatibilidad con React 17+
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"] // Excluye archivos de pruebas
}
